---
import type { OneLinerSection } from "@/content/_schemas/pageSections";

interface Props {
  section: OneLinerSection;
}

const { section } = Astro.props;
const { id, anchor, title, oneLiner, body } = section;
---

<section id={anchor} data-section-id={id} class="py-16 md:py-24 bg-muted/30">
  <div class="container mx-auto px-4 md:px-6 max-w-5xl">
    <div class="text-center space-y-6">
      <h2 class="text-2xl md:text-3xl font-semibold text-foreground">
        {title}
      </h2>
      <p class="text-2xl md:text-3xl lg:text-4xl font-bold text-primary leading-tight">
        {oneLiner}
      </p>
      {body && <p class="text-lg md:text-xl text-muted-foreground max-w-3xl mx-auto">{body}</p>}
    </div>
  </div>
</section>
