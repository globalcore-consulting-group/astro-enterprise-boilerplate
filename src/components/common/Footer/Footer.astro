---
import { t, getNamespace, buildPath } from "@/i18n/translations";
import type { Locale } from "@/domain";

interface Props {
  locale: Locale;
}

const { locale } = Astro.props;
const navItems = getNamespace(locale, "nav");
const currentYear = new Date().getFullYear();
---

<footer class="border-t bg-muted/30">
  <div class="container mx-auto px-4 md:px-6 max-w-7xl py-12 md:py-16">
    <div class="grid grid-cols-1 md:grid-cols-4 gap-8 md:gap-12">
      {/* Company Info */}
      <div class="md:col-span-2">
        <h3 class="text-lg font-bold text-foreground mb-4">GlobalCore</h3>
        <p class="text-sm text-muted-foreground mb-4 max-w-md">
          {t(locale, "footer", "companyDescription")}
        </p>
      </div>

      {/* Navigation */}
      <div>
        <h3 class="text-sm font-semibold text-foreground mb-4">
          {t(locale, "footer", "navigation")}
        </h3>
        <ul class="space-y-3">
          <li>
            <a
              href={buildPath("home", locale)}
              class="text-sm text-muted-foreground hover:text-foreground transition-colors"
            >
              {navItems.home}
            </a>
          </li>
          <li>
            <a
              href={buildPath("about", locale)}
              class="text-sm text-muted-foreground hover:text-foreground transition-colors"
            >
              {navItems.about}
            </a>
          </li>
          <li>
            <a
              href={buildPath("services", locale)}
              class="text-sm text-muted-foreground hover:text-foreground transition-colors"
            >
              {navItems.services}
            </a>
          </li>
          <li>
            <a
              href={buildPath("contact", locale)}
              class="text-sm text-muted-foreground hover:text-foreground transition-colors"
            >
              {navItems.contact}
            </a>
          </li>
        </ul>
      </div>

      {/* Legal */}
      <div>
        <h3 class="text-sm font-semibold text-foreground mb-4">
          {t(locale, "footer", "legal")}
        </h3>
        <ul class="space-y-3">
          <li>
            <a
              href={buildPath("privacy", locale)}
              class="text-sm text-muted-foreground hover:text-foreground transition-colors"
            >
              {t(locale, "footer", "privacyPolicy")}
            </a>
          </li>
          <li>
            <a
              href={buildPath("imprint", locale)}
              class="text-sm text-muted-foreground hover:text-foreground transition-colors"
            >
              {t(locale, "footer", "imprint")}
            </a>
          </li>
        </ul>
      </div>
    </div>

    {/* Copyright */}
    <div class="mt-12 pt-8 border-t">
      <p class="text-sm text-muted-foreground text-center">
        Â© {currentYear} GlobalCore Consulting Group. {t(locale, "footer", "allRightsReserved")}
      </p>
    </div>
  </div>
</footer>
